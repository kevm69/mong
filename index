    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
    <script>
        const mainCard = document.getElementById('mainCard');
        const successCard = document.getElementById('successCard');
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const music = document.getElementById('bgMusic');

        noBtn.addEventListener('click', () => {
            alert("wrong answer Silly Billy, please try again üôÑ");
            const currentScale = parseFloat(yesBtn.style.transform.replace('scale(', '').replace(')', '')) || 1;
            yesBtn.style.transform = `scale(${currentScale + 0.35})`;
        });

        yesBtn.addEventListener('click', () => {
            music.play();
            mainCard.classList.add('hidden');
            successCard.classList.remove('hidden');
           
            const end = Date.now() + 15 * 1000;
            (function frame() {
                confetti({ particleCount: 3, angle: 60, spread: 55, origin: { x: 0 }, colors: ['#ff4d6d', '#ffb3c1'] });
                confetti({ particleCount: 3, angle: 120, spread: 55, origin: { x: 1 }, colors: ['#ff4d6d', '#ffb3c1'] });
                if (Date.now() < end) requestAnimationFrame(frame);
            }());
        });

        /* --- PHOTO BOOK LOGIC --- */

        // Update these with your real filenames and captions
        const photoData = [
            { src: 'photo1.jpg', cap: 'My first photo of you ü´£' },
            { src: 'photo2.jpg', cap: 'What we should be doing rn' },
            { src: 'photo3.jpg', cap: 'I love youuuuu' } // This is your last photo
        ];
       
        let currentPhotoIndex = 0;
        const currentPhotoImg = document.getElementById('currentPhotoImg');
        const photoCaption = document.getElementById('photoCaption');
        const prevBtn = document.getElementById('prevPhoto');
        const nextBtn = document.getElementById('nextPhoto');

        function updatePhoto() {
            currentPhotoImg.src = photoData[currentPhotoIndex].src;
            photoCaption.innerText = photoData[currentPhotoIndex].cap;
        }

        nextBtn.addEventListener('click', () => {
            currentPhotoIndex = (currentPhotoIndex + 1) % photoData.length;
            updatePhoto();
        });

        prevBtn.addEventListener('click', () => {
            currentPhotoIndex = (currentPhotoIndex - 1 + photoData.length) % photoData.length;
            updatePhoto();
        });

        setInterval(() => {
            const h = document.createElement('div');
            h.classList.add('heart-float');
            h.innerHTML = Math.random() > 0.5 ? 'üå∏' : '‚ù§Ô∏è';
            h.style.left = Math.random() * 100 + 'vw';
            document.body.appendChild(h);
            setTimeout(() => h.remove(), 4000);
        }, 400);
    </script>
